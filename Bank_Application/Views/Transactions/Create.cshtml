@model Bank_Application.Models.account

<body style="background-color:lightblue">

    @{
        ViewBag.Title = "Create";
    }

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

    <style>
        marquee {
            font-size: 30px;
            font-weight: 800;
            color: deepskyblue;
            font-family: sans-serif;
        }

        sub {
            vertical-align: sub;
            font-size: smaller;
            color: black;
            font-size: 15px;
        }
    </style>
    <marquee>
        <p>
            WeBank
            <sub>Saving and investing are made simple </sub>
        </p>
    </marquee>



    <div class="w3-container">
        <h1> <b>Welcome :)</b></h1>
        <p> </p>
    </div>
    <hr style="height:2px; border:ridge;color:red;width:100" />
    @*<h2>Create</h2>*@



    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }


    @using (Html.BeginForm(FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal col-md-offset-2">
            <h4>Transaction Service</h4>
            <hr />
            @*<div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <label style="color:green">@ViewBag.Message</label>
                </div>*@
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.account_number, new { htmlAttributes = new { @class = "form-control",PlaceHolder="Enter Account Number" } })
                    @Html.ValidationMessageFor(model => model.account_number, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.amount, new { htmlAttributes = new { @class = "form-control", PlaceHolder = "Enter Amount" } })
                    @Html.ValidationMessageFor(model => model.amount, "", new { @class = "text-danger" })
                </div>
            </div>

           

            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Withdraw" name="btn" class="btn btn-default" />

                    <input type="submit" value="Deposit" name="btn" class="btn btn-default" />


                    <input type="submit" value="Show" name="btn" class="btn btn-default" /><br /><br />

                    <button>@Html.ActionLink("FundTransfer", "FundTransfer", new { @class = "btn btn-default" }) </button>
                </div>
            </div>

            <div class="form-group">
                <label style="color:green">Balance :@ViewBag.Show </label>
                <div class="col-md-10">
                    @Html.ValidationMessageFor(model => model.amount, "", new { @class = "text-danger" })

                </div>
            </div>

            @*<div class="form-group">
                    @Html.LabelFor(model => model.amount, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input type="text" value="@ViewBag.Show" class="btn btn-default" />
                        @Html.ValidationMessageFor(model => model.amount, "", new { @class = "text-danger" })
                    </div>
                </div>*@
        </div>


    }

</body>

    @*<div>
            @Html.ActionLink("Back to List", "Index")
        </div>*@

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
